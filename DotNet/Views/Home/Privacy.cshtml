@{
    ViewData["Title"] = "Privacy Policy";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Modal Example</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
    <!-- The Modal -->
    <div class="modal fade" id="infoModal" tabindex="-1" role="dialog" aria-labelledby="infoModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="infoModalLabel">My Info</h5>
                    <button type="button" class="close" onclick="goBack()" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    <img src="~/Images/fahim.png" class="rounded-circle mb-4" width="150" alt="Profile Picture">
                    <h5 class="mb-2">Asif Iftekher Fahim</h5>
                    <p class="mb-1"><strong>Date of Birth:</strong> 22/10/1999</p>
                    <p class="mb-1"><strong>Education:</strong> CSE Graduated</p>
                    <p class="mb-1"><strong>Institution:</strong> Ahsanullah University of Science and Technology</p>
                    <p class="mb-1"><strong>CGPA:</strong> 3.835</p>
                    <div class="mt-4">
                        <a href="https://www.linkedin.com/in/asif-iftekher-fahim-4b727027b/" class="btn btn-dark mr-2" target="_blank">LinkedIn</a>
                        <a href="https://github.com/IftekherFahim27" class="btn btn-warning" target="_blank">GitHub</a>
                    </div>
                    <p class="mt-4"><strong>Email:</strong> fahimthescientist@gmail.com</p>
                    <p class="mb-0"><strong>Contact Info:</strong> +8801677192720</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" onclick="goBack()">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Script to Automatically Open Modal -->
    <script>
        $(document).ready(function () {
            $('#infoModal').modal('show');
        });
        function goBack() {
            window.history.back();
        }

    </script>
</body>
</html>




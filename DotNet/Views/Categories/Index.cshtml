@model IEnumerable<DotNet.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">List of Categories</h1>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-outline-secondary" asp-action="Create">Create New</a>
</div>

<table class="table table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td style="white-space: nowrap;">
                    <a class="btn btn-dark btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-warning btn-sm" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

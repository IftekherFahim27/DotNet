@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item d-flex flex-column align-items-start">
            <a id="manage" class="nav-link text-light" title="Manage">
                <span style="font-weight: bold;">Hello,</span>
                <span style="color: #007bff;">@UserManager.GetUserName(User)</span>
            </a>
        </li>
        <li class="nav-item d-flex flex-column align-items-start">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-danger  px-3">Logout</button>
            </form>
        </li>

}
else
{
    <li class="nav-item">
            <a class="nav-link text-light px-3" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-light px-3" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
